<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.skin.SplitPaneSkin.ContentDivider?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="notepadplaner.components.NavBar"
            prefWidth="240.0"
            VBox.vgrow="ALWAYS"
            style="-fx-background-color: red; -fx-max-width: 240px;">
    <VBox style="-fx-background-color: green;" prefWidth="240.0" VBox.vgrow="ALWAYS" alignment="CENTER"
          AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets bottom="20.0" top="20.0"/>
        </padding>
        <Text text="Notepad" textAlignment="CENTER"
              style="-fx-max-width: 240px; -fx-font-size: 30px; -fx-font-weight: bold" />
        <Text text="Planer" textAlignment="CENTER"
              style="-fx-max-width: 240px; -fx-font-size: 30px; -fx-font-weight: bold" />
    </VBox>
    <VBox style="-fx-background-color: green;" prefWidth="240.0" VBox.vgrow="ALWAYS" spacing="8"
              AnchorPane.topAnchor="128.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <padding>
            <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
        </padding>
        <Hyperlink fx:id="notesNavLink" onAction="#goToNotes" text="Notes"
                   style="-fx-font-size: 20px; -fx-border-color: transparent; -fx-underline: false; -fx-text-fill: #000000" />
        <Hyperlink fx:id="toDoListsNavLink" onAction="#goToToDoLists" text="To-do lists"
                   style="-fx-font-size: 20px; -fx-border-color: transparent; -fx-underline: false; -fx-text-fill: #000000" />
    </VBox>
    <HBox VBox.vgrow="ALWAYS" alignment="BOTTOM_CENTER" style="-fx-background-color: green"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <padding>
             <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
         </padding>
         <StackPane AnchorPane.bottomAnchor="0.0">
             <Button fx:id="backButton" onAction="#returnToMainMenu"
                     text="Back to main screen" mnemonicParsing="false" />
         </StackPane>
    </HBox>
</AnchorPane>
