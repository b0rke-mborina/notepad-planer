<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<?import javafx.scene.control.Button?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      VBox.vgrow="ALWAYS"
      fx:controller="notepadplaner.controllers.NotesController"
      stylesheets="@../../css/app-styles.css"
      styleClass="bg-beige">
    <fx:include fx:id="navBar" source="../components/NavBar.fxml"/>
    <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
        <HBox prefHeight="120" alignment="CENTER" styleClass="bg-beige">
            <padding>
                <Insets top="20.0" bottom="20.0" />
            </padding>
            <Text text="Notes" textAlignment="CENTER" styleClass="fw-bold, fs-24" />
        </HBox>
        <FlowPane fx:id="contentBox" alignment="TOP_CENTER" style="-fx-background-color: red" styleClass="content-flex-box">
            <padding>
                <Insets top="4.0" bottom="20.0" left="20.0" right="20.0" />
            </padding>
            <Text text="Here go notes..." />
            <Text text="Here go notes..." />
            <Text text="Here go notes..." />
            <Text text="Here go notes..." />
            <Text text="Here go notes..." />
            <Text text="Here go notes..." />
        </FlowPane>
        <HBox alignment="CENTER" styleClass="bg-beige">
            <padding>
                <Insets top="8.0" bottom="8.0" />
            </padding>
            <Button text="New note" onAction="#addNewNote" textAlignment="CENTER" styleClass="button, bg-orange" />
        </HBox>
    </VBox>
</HBox>
