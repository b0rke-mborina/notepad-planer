<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>
<HBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            VBox.vgrow="ALWAYS" style="-fx-background-color: yellow"
            fx:controller="notepadplaner.controllers.NotesController">
    <fx:include fx:id="navBar" source="../components/NavBar.fxml"/>
    <VBox alignment="TOP_CENTER" HBox.hgrow="ALWAYS">
        <HBox prefHeight="120" alignment="CENTER" style="-fx-background-color: white">
            <padding>
                <Insets top="20.0" bottom="20.0" />
            </padding>
            <Text text="Notes" textAlignment="CENTER" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        </HBox>
        <VBox>
            <padding>
                <Insets top="20.0" bottom="20.0" left="20.0" right="20.0" />
            </padding>
            <Text text="Here go notes..." />
        </VBox>
    </VBox>
</HBox>
